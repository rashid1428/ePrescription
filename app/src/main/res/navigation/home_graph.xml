<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.doctor.eprescription.features.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.doctor.eprescription.features.homescreen.display.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_addEditPatientFragment"
            app:destination="@id/addEditPatientFragment" />
        <argument
            android:name="login_response"
            android:defaultValue="@null"
            app:argType="com.doctor.eprescription.data.remote.model.response.LoginResponse"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/addEditPatientFragment"
        android:name="com.doctor.eprescription.features.homescreen.addeditpatient.AddEditPatientFragment"
        tools:layout="@layout/fragment_add_edit_patient"
        android:label="AddEditPatientFragment">
        <argument
            android:name="patient"
            app:argType="com.doctor.eprescription.data.remote.model.response.PatientsResponse$Patient"
            app:nullable="true" />
    </fragment>

    <include app:graph="@navigation/patient_menu_graph" />
</navigation>