<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eprescription" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView.SanSerif.20" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MediumFontStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/colorWineText</item>
    </style>

    <style name="SemiBoldStyleForButtons">
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="SelectableButton" parent="SemiBoldStyleForButtons">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/white_button_bg</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@drawable/text_selector_white_red</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BoldFontStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="LightFontStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorWineText</item>
    </style>

    <style name="MediumFontStyleGrey">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorGrayText8080</item>
    </style>

    <style name="MediumFontStyleWhite">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorWineText</item>
    </style>

    <style name="RegularFontStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MyStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="TextView.Grey.Regular.12" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextView.Blue.Bold.12" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
        <item name="track">@drawable/rectangle_round_mountain_meadow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.CardHeading" parent="@style/RegularFontStyle">
        <item name="android:background">@drawable/rectangle_round_top_8_greylight</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="ToggleStyle">
        <item name="android:padding">@dimen/button_text_padding</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorControlNormal</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="WhiteBoldText" parent="@android:style/Widget">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryNormalText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.BlackBg" parent="Widget.AppCompat.TextView">
        <item name="android:text">Prescriber</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@color/black</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>

    <style name="Textview.Black.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Textview.Black.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_tab_button</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>