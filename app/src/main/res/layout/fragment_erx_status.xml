<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_24sdp"
    tools:context="com.doctor.eprescription.features.homescreen.erxstatus.ErxStatusFragment">

    <include
        android:id="@+id/compBackButton"
        layout="@layout/comp_back_button"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/erx_status"
        android:layout_marginTop="@dimen/_8sdp"
        style="@style/TextView.SanSerif.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/compBackButton" />

    <com.doctor.eprescription.components.mutistatetogglebutton.MultiStateToggleButton
        android:id="@+id/multiToggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="@dimen/_10sdp"
        app:values="@array/planets_array"
        app:mstbPrimaryColor="@color/red" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvErx"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/multiToggleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_erx_status"
        />

</androidx.constraintlayout.widget.ConstraintLayout>