<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_tick_blue"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/llText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivTick"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvPharmacyName"
            style="@style/MediumFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:text="Pharmacy Name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pharmacy_spacer" />

        <TextView
            android:id="@+id/tvStreet"
            style="@style/RegularFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="street" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pharmacy_spacer" />

        <TextView
            android:id="@+id/tvCity"
            style="@style/RegularFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="city" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pharmacy_spacer" />

        <TextView
            android:id="@+id/tvCityCode"
            style="@style/RegularFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="city code" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_pharmacy_spacer" />

        <TextView
            android:id="@+id/tvZipCode"
            style="@style/RegularFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="zip code" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/llText"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>