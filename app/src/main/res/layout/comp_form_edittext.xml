<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <EditText
        android:id="@+id/etForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="null"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/app_name"
        android:maxLines="6"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        tools:text="text text"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@null"
        android:textColor="@color/black"
        android:textColorHint="@color/color_light_grey"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toStartOf="@id/ivArrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/etForm"/>

    <ImageView
        android:id="@+id/ivError"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_error"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etForm"
        app:layout_constraintBottom_toBottomOf="@id/etForm"
        app:tint="@color/red"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_arrow_right"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/ivError"
        app:layout_constraintTop_toTopOf="@id/etForm"
        app:layout_constraintBottom_toBottomOf="@id/etForm"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="end"
        android:text="Error"
        android:textColor="@color/colorWineText"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:visibility="visible" />

    <View
        android:id="@+id/clickView"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/etForm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>